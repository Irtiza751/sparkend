# .env.example
NODE_ENV=development
PORT=4000

# database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=nestjs_boilerplate

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_ISSUER=http://localhost:4000
JWT_AUDIENCE=http://localhost:3000
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@yourapp.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# disk storage configuration
DISK_UPLOAD_PATH=./uploads
DISK_BASE_URL=http://localhost:3000/files

# For S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_S3_BUCKET=your_bucket